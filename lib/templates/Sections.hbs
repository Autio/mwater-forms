<ul class="breadcrumb"></ul>
<div class="sections"></div>
<div class="form-controls">
	<button type="button" class="btn btn-default prev"><span class="glyphicon glyphicon-backward"></span> {{T "Back"}}</button>&nbsp;
	<button type="button" class="btn btn-primary next">{{T "Next"}} <span class="glyphicon glyphicon-forward"></span></button>&nbsp;
	<button type="button" class="btn btn-primary finish">{{#if submitLabel}}{{submitLabel}}{{else}}{{T "Submit"}}{{/if}}</button>&nbsp;
	{{#if allowSaveForLater}}<button id="close" type="button" class="btn btn-default">{{T "Save for Later"}}</button>&nbsp;{{/if}}
	<button id="discard" type="button" class="btn btn-default"><span class="glyphicon glyphicon-trash"></span> {{T "Discard"}}</button>
</div>