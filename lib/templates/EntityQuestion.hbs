{{#if entity}}
	{{#if properties}}
		{{#each properties}}
		<div><span class="text-muted">{{name}}</span>: {{value}}</div>
		{{/each}}
	{{else}}
		{{#if propertiesError}}
			<div class="text-error">{{propertiesError}}</div>
		{{else}}
			<div class="text-muted">{{T "Loading..."}}</div>
		{{/if}}
	{{/if}}
	<button id="change_entity_button" type="button" class="btn btn-link btn-sm">
		<span class="glyphicon glyphicon-pencil"></span>
		{{T "Change"}}
	</button>
{{else}}
	<button id="select_entity_button" type="button" class="btn btn-default btn-sm">
		<span class="glyphicon glyphicon-ok"></span>
		{{selectText}}
	</button>
{{/if}}

